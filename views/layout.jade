doctype html
html(lang='en')
	head
		meta(charset='utf-8')
		title Nenn.es personal website
		
		script(src='https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js')
		link(rel='stylesheet', href='/stylesheets/main.css')
		// link(href='https://fonts.googleapis.com/css?family=Inconsolata', rel='stylesheet', type='text/css')
		link(href='https://fonts.googleapis.com/css?family=Poiret+One', rel='stylesheet', type='text/css')
	body
		nav
			ul
				li(class=meta.section == "home" ? "active" :"")
					a(href="/") Home
				li(class=meta.section == "bio" ? "active" :"")
					a(href="/bio") Bio
				li(class=meta.section == "projects" ? "active" :"")
					a(href="/projects") Projects
				li(class=meta.section == "blog" ? "active" :"")
					a(href="/blog") Blog
				li(class=meta.section == "contact" ? "active" :"")
					a(href="/contact") Contact
		#mainContent(class="section_#{ meta.section }") 
			block content
			
			