<script type="text/template" id="template-modal-view">

	<div class="col-sm-5 text-center content-img"><img class="col-xs-12 img-modal-body" src="http://{{data.config.S3_BUCKET_NAME}}<%= data.picture %>" /><br /></div>
		<div class="col-sm-7">
			<% if(langs.length){ %>
			<div class="row">
				<div class="col-xs-5">Language</div>

				<% _.each(langs, function(lang){ %>
					<img class="flags" src="http://{{data.config.S3_BUCKET_NAME}}/img/lang/<%= lang.toUpperCase() %>.PNG" alt="<%= lang %>" />
				<% }); %>

			</div>
			<% } %>
			<% if(occupations.length){ %>
			<div class="row">
				<div class="col-xs-5">Occupations</div>
				<div class="col-xs-7 no-wrap">
					<% if(_.isString(occupations)){%>
						<span class="col-xs-12"><span class="font-icon"><%= icons[occupations.toUpperCase()] %></span> <%= occupations %></span>
					<% }else{%>
						<% _.each(occupations, function(occupation){ %>
								<span class="col-xs-12"><span class="font-icon"><%= icons[occupation.toUpperCase()] %></span> <%= occupation %></span>
						<% }); %>
					<% } %>
				</div>
			</div>
			<% } %>
			<% if(data.website){ %>
			<div class="row">
				<div class="col-xs-5">Link </div>
				<div class="col-xs-7 ellipsis">
					<a href="<%= data.website %>" target="_blank"><%= data.website %></a>
				</div>
			</div>
			<% } %>
		</div>
<br />
		<div class="col-sm-5"></div>
		<div class="col-sm-7 socials-wrapper">
		<div class="col-xs-6 text-center">
<a name="fb_share" class="fb-share-button" share_url="{{data.config.root_url}}/number/<%= data.number %>" type="button_count"></a>
</div>
		<div class="col-xs-6 text-center"><a class="twitter-share-button" href="https://twitter.com/intent/tweet?url={{data.config.root_url}}%2Fnumber%2F<%= data.number %>">
										Tweet
									</a></div>
	</div>
	</div>
</script>
