{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "alwaysStrict": true,
        "declaration": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "importHelpers": true,
        "incremental": true,
        "lib": ["ES6"],
        "module": "CommonJS",
        "moduleResolution": "Node",
        "noEmitOnError": true,
        "noErrorTruncation": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "outDir": "app/dist",
        "preserveConstEnums": true,
        "skipLibCheck": true,
        "sourceMap": true,
        "target": "ES5",
    },
    "exclude": [
        "node_modules",
        "**/node_modules/*"
    ],
    "include": ["app/src/**/*"]
}